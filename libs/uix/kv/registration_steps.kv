<RegistrationSteps>:

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Oxivive"
            left_action_items: [['help-circle-outline', lambda x: root.open_help()]]
            elevation: 2

        ScrollView:
            MDGridLayout:
                id: grid
                cols: 1
                adaptive_height: True
                padding: '20px'
                spacing:'20px'
                MDBoxLayout:
                    padding:'10px'
                    size_hint_y:None
                    height:'50px'
                    MDLabel:
                        text:"Welcome,John Doe"
                        font_style:'H6'
                        font_size:'42px'
                        halign:'center'

                MDLabel:
                    text: "Here's what you need to do to set up your account."
                    halign: "left"
                    font_style: "Subtitle1"
                    size_hint_y: None
                    height: self.texture_size[1] + dp(10)

                MDList:
                    id: list_container

