                                    FitImage:
                                        id:profile_image
                                        source: "images/profile.jpg"  # Replace with doctor's image
                                        allow_stretch: True
                                        keep_ratio: True
                                        radius: [dp(150),]

                                MDBoxLayout:
                                    orientation: 'vertical'
                                    MDLabel:
                                        id:username
                                        text: "Muhammed Syahid"
                                        font_style: "Subtitle1"
                                        halign: 'left'
                                        # color:1,1,1,1
                                    MDLabel:
                                        id:user_email
                                        text: "muhammeds@gmail.com"
                                        font_style: "Caption"
                                        halign: 'left'
                                        # color:1,1,1,.5
                                    MDLabel:
                                        text: "View Profile  â€º"
                                        theme_text_color: "Custom"
                                        text_color: [0, 0.6, 1, 1]  # Blue for link
                                        font_size: "14sp"
                        # Cards for Each Option
                        MDCard:
                            orientation: 'vertical'
