<Item>
    on_release: root.set_screen()
    ImageLeftWidget:
        source: root.source
        radius:[150]
<ItemConfirm>
    on_release: root.set_screen()
    IconLeftWidget:
        icon:'account'

<CustomButton@MDRelativeLayout>:
<CustomButtonMap>:
    icon:'crosshairs-gps'
<CustomModalView>
    id: custom_modal_view
    size_hint: None, None
    pos_hint: {'center_x': .5, 'y': 0}
    auto_dismiss: False
    opacity: 0
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: 1, 1, 1, 1
        MDBoxLayout:
            size_hint: 1, None
            height: dp(30)
            MDLabel:
                text: 'Swipe'
                halign: 'center'
                valign: 'center'
        MDGridLayout:
            cols: 1
            MDList:
                id: search_results
            OneLineIconListItem:
                text: 'Set location on map'
                on_release:root.dismiss_modal()
                IconLeftWidget:
                    icon:"map-marker"
                    on_release:root.dismiss_modal()


<ClientLocation>:
    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: dp(150)
            pos_hint: {'center_y': 1}
            elevation:2
            spacing:dp(10)
            padding: dp(25),0,dp(25),dp(10)
            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(20)
                pos_hint: {"center_x": .5, "top": 1}
                MDIconButton:
                    icon: "arrow-left"
                    pos_hint: {"center_y": .94}
                    user_font_size: "20sp"
                    theme_text_color: "Custom"
                    text_color: rgba(34, 34, 34, 255)
                    pos_hint: { "center_y": .5}
                    on_release: root.back_button()
                MDLabel:
                    text: "Plan your appointment"
                    font_name: "Roboto-Bold"
                    font_size: "20sp"
                    #pos_hint: {"center_x": .5, "center_y": .5}
                    color: rgba(34, 34, 34, 255)
                    halign:'center'
            CustomButton:
                size_hint_y: None
                size_hint_x:None
                width:choose.width
                height: choose.height
                pos_hint: {"center_x": .5, "center_y": .5}
                MDFillRoundFlatIconButton:
                    id: choose
                    size_hint_x: None
                    width:dp(150)+down.width
                    text:"My self      "
                    on_release: root.show_confirmation_dialog()
                    icon:'account'
                    pos_hint: {"center_x": .5, "center_y": .5}
                    md_bg_color:0,0,0,.05
                    text_color:0,0,0,1
                    icon_color:0,0,0,1
                MDIconButton:
                    id:down
                    icon: 'chevron-down'
                    theme_text_color: "Custom"
                    icon_color: 0, 0, 0, 1
                    size_hint: None, None
                    size: dp(24), dp(24)
                    on_release:  root.show_confirmation_dialog()
                    pos_hint: { "center_y": .5}
                    pos: choose.width + self.width -dp(90), 0

            MDTextField:
                id: autocomplete
                hint_text: "Search for places"
                size_hint_x: 1
                mode:'round'
                on_text: root.search_location(self, self.text)
                on_focus: root.on_text_field_focus(self, self.focus)
                line_color_focus:0,0,0,1
                text_color_focus:0,0,0,1
                fill_color_normal:1,1,1,1
                icon_left:'google-maps'
                icon_left_color_focus:0,0,0,1



        FloatLayout:
            orientation: "vertical"
            CustomMapView:
                id: map_view
                manager:root.manager
                lat: 0
                lon: 0
                zoom: 3

            CustomButtonMap:
                id: floating_action_button
                icon:'crosshairs-gps'
                pos: self.parent.width - self.width - dp(30), dp(100)
                on_release: root.fetch_location_details(self)
                md_bg_color: 1, 1, 1, 1
                elevation_normal: 1
                icon_color:0,0,0,1
                canvas:
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [150,]  # Adjust the radius value as needed

            MDBoxLayout:
                orientation: "vertical"
                padding: dp(25)
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint: (1, None)
                    height:dp(50)
                    MDRaisedButton:
                        text: "Done"
                        text_color: 1, 1, 1, 1
                        font_style: 'Subtitle2'
                        font_size:'16sp'
                        md_bg_color: 0, 0, 0, 1
                        pos_hint: {'center_x': .5, 'center_y': .1}
                        size_hint: (1, 1)
                        on_release:root.next_screen()
