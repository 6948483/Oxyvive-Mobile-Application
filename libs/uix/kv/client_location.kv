<CustomModalView>
    id: custom_modal_view
    size_hint: None, None
    pos_hint: {'center_x': .5, 'y': 0}
    auto_dismiss: False
    opacity: 0
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: 1, 1, 1, 1
        MDBoxLayout:
            size_hint: 1, None
            height: dp(30)
            MDLabel:
                text: 'Swipe'
                halign: 'center'
                valign: 'center'
        MDGridLayout:
            cols: 1
            MDList:
                id: search_results
            OneLineIconListItem:
                text: 'Set location on map'
                on_release:root.dismiss_modal()
                IconLeftWidget:
                    icon:"map-marker"
                    on_release:root.dismiss_modal()


<ClientLocation>:
    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: dp(150)
            pos_hint: {'center_y': 1}
            elevation:2
            spacing:dp(10)
            padding: dp(25),0,dp(25),dp(10)
            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(20)
                pos_hint: {"center_x": .5, "top": 1}
                MDIconButton:
                    icon: "arrow-left"
                    pos_hint: {"center_y": .94}
                    user_font_size: "20sp"
                    theme_text_color: "Custom"
                    text_color: rgba(34, 34, 34, 255)
                    pos_hint: { "center_y": .5}
                    on_release: root.back_button()
                MDLabel:
                    text: "Plan your appointment"
                    font_name: "Roboto-Bold"
                    font_size: "20sp"
                    pos_hint: {"center_x": .3, "center_y": .5}
                    color: rgba(34, 34, 34, 255)
                    #halign:'center'
            CustomButton:
                size_hint_y: None
                size_hint_x:None
                width:choose.width
                height: choose.height
                pos_hint: {"center_x": .5, "center_y": .5}
                MDFillRoundFlatIconButton:
                    id: choose
                    size_hint_x: None
                    width:dp(150)+down.width
                    text:"My self      "
                    on_release: root.show_confirmation_dialog()
                    icon:'account'
                    pos_hint: {"center_x": .5, "center_y": .5}
                    md_bg_color:0,0,0,.05
                    text_color:0,0,0,1
                    icon_color:0,0,0,1
                MDIconButton:
                    id:down
                    icon: 'chevron-down'
                    theme_text_color: "Custom"
                    icon_color: 0, 0, 0, 1
                    size_hint: None, None
                    size: dp(24), dp(24)
                    on_release:  root.show_confirmation_dialog()
                    pos_hint: { "center_y": .5}
                    pos: choose.width + self.width -dp(90), 0
            CustomTextField:
                MDIconButton:
                    id: left_icon
                    icon:'google-maps'
                    size_hint: None, None
                    size: dp(30), dp(30)
                    pos_hint: {"center_y": 0.5}
                    theme_text_color: "Custom"
                    text_color: [0, 0, 0, 1]

                MDTextField:
                    id: autocomplete
                    hint_text: 'Search location here'
                    on_text: root.search_location(self, self.text)
                    on_focus: if self.focus:root.on_text_field_focus(self, self.focus)
                    size_hint_x: 1
                    size_hint_y: None
                    height: dp(50)
                    font_size: "18sp"
                    halign:'left'
                    line_color_focus: 0, 0, 0, 0.001
                    mode: "round"
                    radius: [dp(25),]
                    pos_hint: {"center_y": 0.5}
                    fill_color_normal:0, 0, 0, 0.001
                    fill_color_focus:0, 0, 0, 0.001
                    text_color_normal:0, 0, 0, 0.5
                    text_color_focus:0, 0, 0, 1
                    line_color_normal:0, 0, 0, 0.001

                MDIconButton:
                    id: right_icon
                    icon:  "close-circle"
                    size_hint: None, None
                    size: dp(30), dp(30)
                    pos_hint: {"center_y": 0.5}
                    on_release: autocomplete.text = ''
                    theme_text_color: "Custom"
                    text_color: [0, 0, 0, 1]

