<Profile_screen>:
    name: 'profile'
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: 'Oxivive Account'
            left_action_items: [['arrow-left', lambda x: root.go_back()]]
            elevation: 5
            md_bg_color: (1, 0, 0, 1) # Red color for the top bar

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                padding: dp(10)
                spacing: dp(10)
                pos_hint: {'center_x': 0.5}

                MDCard:
                    size_hint: None, None
                    size: "378dp", "120dp"
                    elevation: 3
                    radius: [20]
                    padding: dp(20)
                    pos_hint: {'center_x': 0.5}

                    BoxLayout:
                        spacing: dp(10)
                        FitImage:
                            source: ""
                            id: profile_image
                            size_hint: None, None
                            size: "80dp", "80dp"
                            radius: [20]

                        MDBoxLayout:
                            orientation: 'vertical'
                            adaptive_height: True
                            padding: dp(30)
                            spacing: dp(30)

                            MDLabel:
                                id: username
                                text: "Username"
                                theme_text_color: "Primary"
                                font_style: "H6"

                            MDLabel:
                                id: phone
                                text: "Phone"
                                theme_text_color: "Secondary"
                                font_style: "Body1"

                MDCard:
                    size_hint: None, None
                    size: "378dp", "400dp"  # Reduce height to fit content
                    elevation: 3
                    radius: [20]
                    orientation: 'vertical'
                    padding: dp(10)
                    pos_hint: {'center_x': 0.5}

                    MDLabel:
                        text: "Settings"
                        theme_text_color: "Primary"
                        font_style: "H6"
                        halign: "center"
                        pos_hint: {'center_x': 0.5, 'center_y': 1.5}
                        size_hint: None, None
                        size: "100dp", "50dp"
                    MDSeparator:
                        height: dp(1)

                    MDBoxLayout:
                        orientation: 'vertical'
                        spacing: dp(10)
                        padding: dp(10)

                        # Profile Setting
                        MDBoxLayout:
                            orientation: 'horizontal'
                            spacing: dp(10)

                            IconLeftWidget:
                                icon: 'account'

                            MDLabel:
                                text: "Profile"
                                theme_text_color: "Primary"
                                font_style: "Subtitle1"

                            MDIconButton:
                                icon: 'arrow-right'
                                pos_hint: {'center_y': 0.5}
                                on_release: root.profile()
                        MDSeparator:
                            height: dp(1)

                        # Notifications Setting
                        MDBoxLayout:
                            orientation: 'horizontal'
                            spacing: dp(10)

                            IconLeftWidget:
                                icon: 'bell'

                            MDLabel:
                                text: "Notifications"
                                theme_text_color: "Primary"
                                font_style: "Subtitle1"

                            MDIconButton:
                                icon: 'arrow-right'
                                pos_hint: {'center_y': 0.5}
                                on_release: root.notifications()
                        MDSeparator:
                            height: dp(1)

                        # Bookings Setting
                        MDBoxLayout:
                            orientation: 'horizontal'
                            spacing: dp(10)

                            IconLeftWidget:
                                icon: 'calendar-check'

                            MDLabel:
                                text: "Bookings"
                                theme_text_color: "Primary"
                                font_style: "Subtitle1"

                            MDIconButton:
                                icon: 'arrow-right'
                                pos_hint: {'center_y': 0.5}
                                on_release: root.Bookings()
                        MDSeparator:
                            height: dp(1)

                        # Reports Setting
                        MDBoxLayout:
                            orientation: 'horizontal'
                            spacing: dp(10)

                            IconLeftWidget:
                                icon: 'file-document'

                            MDLabel:
                                text: "Reports"
                                theme_text_color: "Primary"
                                font_style: "Subtitle1"

                            MDIconButton:
                                icon: 'arrow-right'
                                pos_hint: {'center_y': 0.5}
                                on_release: root.Reports()

                        MDSeparator:
                            height: dp(1)

                        # Support Setting
                        MDBoxLayout:
                            orientation: 'horizontal'
                            spacing: dp(10)

                            IconLeftWidget:
                                icon: 'lifebuoy'

                            MDLabel:
                                text: "Support"
                                theme_text_color: "Primary"
                                font_style: "Subtitle1"

                            MDIconButton:
                                icon: 'arrow-right'
                                pos_hint: {'center_y': 0.5}
                                on_release: root.Support()
                        MDSeparator:
                            height: dp(1)

                        # Log-out Setting
                        MDBoxLayout:
                            orientation: 'horizontal'
                            spacing: dp(10)

                            IconLeftWidget:
                                icon: 'logout'

                            MDLabel:
                                text: "Log-out"
                                theme_text_color: "Primary"
                                font_style: "Subtitle1"

                            MDIconButton:
                                icon: 'arrow-right'
                                pos_hint: {'center_y': 0.5}
                                on_release: root.Log_out()
<CustomImageTile>:
    radius: 24
    box_radius: [0, 0, 24, 24]
    box_color: 1, 1, 1, .2
    source: "cats.jpg"
    pos_hint: {"center_x": .5, "center_y": .5}
    size_hint: None, None
    size: "320dp", "150dp"
    MDIconButton:
        icon: "heart-outline"
        theme_icon_color: "Custom"
        icon_color: 1, 0, 0, 1
        pos_hint: {"center_y": .5}
        on_release: self.icon = "heart" if self.icon == "heart-outline" else "heart-outline"

    MDLabel:
        id:label
        text: "Julia and Julie"
        bold: True
        color: 1, 1, 1, 1

