<CustomImageTile>:
    radius: 24
    box_radius: [0, 0, 24, 24]
    box_color: 1, 1, 1, .2
    source: "cats.jpg"
    pos_hint: {"center_x": .5, "center_y": .5}
    size_hint: None, None
    size: "320dp", "200dp"

    MDIconButton:
        icon: "heart-outline"
        theme_icon_color: "Custom"
        icon_color: 1, 0, 0, 1
        pos_hint: {"center_y": .5}
        on_release: self.icon = "heart" if self.icon == "heart-outline" else "heart-outline"

    MDLabel:
        text: "Julia and Julie"
        bold: True
        color: 1, 1, 1, 1

<ClickableTextFieldRound>:
    size_hint_y: None
    height: text_field.height
    MDTextField:
        id: text_field
        mode: "fill"
        hint_text: root.hint_text
        text: root.text
        radius:[20, 20, 20, 20]
        password: True
        # icon_left: "magnify"
        line_color_focus: 1, 1, 1, 1  # Gray line color
        background_color: 1, 1, 1, 1
    MDIconButton:
        icon: "magnify"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(10), 0
        theme_text_color: "Hint"
        on_release:pass




<HeroItem>
    id:hero
    size_hint_y: None
    size_hint_x: None
    height: '120dp'
    width: '80dp'
    radius: 10
    MDSmartTile:
        id: tile
        radius: 10
        box_radius: 0, 0, 10, 10
        box_color: 0, 0, 0, 0.5
        source: root.text
        size_hint: None, None
        size: root.size
        mipmap: True
        on_release: root.on_release()

        MDLabel:
            text: root.tag
            bold: True
            font_style: "Subtitle2"
            halign:'center'
            opposite_colors: True

