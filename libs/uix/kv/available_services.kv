<LoadingScreen@ModalView>:
    size_hint: 0.5, 0.3
    auto_dismiss: False
    radius: [20]
    MDCard:
        orientation: "vertical"
        md_bg_color: 1, 1, 1, 1
        radius: [20]
        AnchorLayout:
            MDLabel:
                id: loading_label
                text: "Loading..."
                halign: "center"
                font_size:dp(20)
                opacity: 1
        AnchorLayout:
            MDSpinner:
                size_hint: None, None
                size: dp(30), dp(30)
                pos_hint: {'center_x': .5, 'center_y': .5}
                active:True

<AvailableService>:
    MDSliverAppbar:
        #background_color: ""
        toolbar_cls:root.silver_tool_bar

        MDSliverAppbarHeader:

            MDRelativeLayout:

                CustomMapView2:
                    id: map_view2
                    manager:root.manager
                    lat: 21
                    lon: 78
                    zoom: 10

        MDSliverAppbarContent:
            id: content
            orientation: "vertical"
            padding: "12dp"
            spacing: "12dp"
            adaptive_height: True
            
