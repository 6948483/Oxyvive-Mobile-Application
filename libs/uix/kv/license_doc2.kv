<TakePhotoForDoc>:
    MDBoxLayout:
        orientation: 'vertical'

        # Top Toolbar
        MDTopAppBar:
            title: "Oxivive"
            left_action_items: [["arrow-left", lambda x: root.on_back_button()]]
            right_action_items: [["help-circle-outline", lambda x: root.show_help()]]

        # Scroll view for text and image content
        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                padding: dp(20)
                spacing: dp(25)
                adaptive_height: True

                # Title Label (Dynamic)
                MDBoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True
                    MDLabel:
                        id: title_label
                        text: "Take a photo of your document"
                        halign: 'left'
                        theme_text_color: "Primary"
                        font_style: 'H6'

                # Instructions Label (Dynamic)
                MDLabel:
                    id: instructions_label
                    text: "Ensure the details on the document are clearly visible and not blurred."
                    halign: 'left'
                    theme_text_color: "Secondary"
                    font_style: 'Caption'
                    size_hint_y: None
                    height: self.texture_size[1]

                # Sample Image (Dynamic)
                Image:
                    id: sample_image
                    source: 'default_sample.png'
                    allow_stretch: True
                    keep_ratio: True
                    size_hint_y: None
                    height: 200

                # "Zoom" Icon
                MDLabel:
                    text: "[size=12][color=#666666]ZOOM[/color][/size]"
                    markup: True
                    halign: 'center'
                    size_hint_y: None
                    height: 20

        # Take Photo Button
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            adaptive_height: True

            MDRaisedButton:
                text: "Take Photo"
                pos_hint: {"center_x": 0.5}
                size_hint_x: 0.8
                on_release: root.take_photo()
